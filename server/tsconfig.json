{
  "compilerOptions": {
    "rootDir": "./src",
    "outDir": "./dist",

    "target": "ES2022",
    "module": "preserve",
    "moduleResolution": "bundler",

    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "resolveJsonModule": true,

    "sourceMap": true,
    "declaration": false,
    "verbatimModuleSyntax": false,
    "isolatedModules": false
  },
  "include": ["src"]
}
